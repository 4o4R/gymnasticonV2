{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Gymnasticon (Bot Mode)",
            "runtimeVersion": "14",  // Force Node.js 14
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app/cli.js",
            "args": ["--bike", "bot", "--bot-power", "150", "--bot-cadence", "80"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_NO_WARNINGS": "1"  // Suppress experimental warnings
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Gymnasticon (Auto-detect)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app/cli.js",
            "args": ["--bike", "autodetect"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/run-tests.mjs",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Gymnasticon (Bot Mode)",
            // Use the nvm-managed Node 14 executable so VSCode debug runs the same Node
            // as the one installed by the setup script. Update the path if you installed
            // a different patch version of Node 14 via nvm-windows.
            "runtimeExecutable": "C:/Users/James/AppData/Roaming/nvm/v14.21.3/node.exe",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app/cli.js",
            "args": ["--bike", "bot", "--bot-power", "150", "--bot-cadence", "80"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                // Suppress noisy Node warnings during debugging
                "NODE_NO_WARNINGS": "1",
                // Ensure npm/node-gyp will find the Python 2.7 install if you set it
                // via the setup script or manually. Update the path if different.
                "npm_config_python": "C:/Python27/python.exe"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Gymnasticon (Auto-detect)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app/cli.js",
            "args": ["--bike", "autodetect"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/run-tests.mjs",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
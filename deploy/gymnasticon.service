[Unit]
Description=Gymnasticon Bike Bridge
After=bluetooth.target network.target
Wants=bluetooth.target

[Service]
Type=simple
Restart=always
RestartSec=5
Environment=NODE_ENV=production
WorkingDirectory=/opt/gymnasticon/app
# Mirror runtime logs to the console so HDMI output reflects what Gymnasticon emits during boot.
StandardOutput=journal+console
StandardError=journal+console
ExecStart=/opt/gymnasticon/bin/gymnasticon --config /etc/gymnasticon.json

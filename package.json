    "serialport": "^13.0.0",
    "usb": "^2.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.25.9",
    "@babel/plugin-transform-parameters": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "eslint": "^9.18.0",
    "sinon": "^19.0.2",
    "tape": "^5.9.0"
  }
}

